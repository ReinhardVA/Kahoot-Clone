<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Quiz!</title>
</head>
<body>
    <h1>CREATE QUIZ</h1>
    <form action="/api/createQuiz" method="POST">
        
        <input type="text" name="title" placeholder="Quiz title" required>

        <div id="question-container">

        </div>

        <button type="button" onclick="addQuestion()"> Add Question </button> <br><br>
        <button type="submit">Submit quiz</button>
    </form>
    <script>
        let questionCount = 0;
        function addQuestion(){
            const container = document.getElementById('question-container');
            const qIndex = questionCount++;

            const div = document.createElement('div');
            div.classList.add('question-block')
            div.innerHTML = `
                <div class="question-block">
                    <h3>Question ${qIndex + 1}</h3>
                    <label>Question Text: </label>
                    <input type="text" name="questions[${qIndex}][questionText]" required><br>
        
                    <label>Option A:</label>
                    <input type="text" name="questions[${qIndex}][options][A]" required><br>
                    <label>Option B:</label>
                    <input type="text" name="questions[${qIndex}][options][B]" required><br>
                    <label>Option C:</label>
                    <input type="text" name="questions[${qIndex}][options][C]" required><br>
                    <label>Option D:</label>
                    <input type="text" name="questions[${qIndex}][options][D]" required><br>

                    <label>Correct Option (A/B/C/D):</label>
                    <input type="text" name="questions[${qIndex}][correctIndex]" required><br><br>
                </div>`;

                container.appendChild(div);
        }
        window.onload = addQuestion
    </script>
</body>
</html>